<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<div id="slideshow"></div>

<style>

  #slideshow {
    position: relative;
    width: 800px;
    height: 400px;
    margin: 100px auto;
    overflow: hidden;
    border: 10px solid #333;
    background: #333;
  }
  
  .slide {
   position: absolute;
  }

</style>

<script>

var imageArray = ['slide1.jpg', 'slide2.jpg', 'slide3.jpg', 'slide4.jpg'];

imageArray.forEach(function(image, index) {
  var el = $('<img class="slide" src="/images/' + image + '" />');
  var position = (index * 800) + 'px';
  el.css({left: position});
  $('#slideshow').append(el);
});


// set to a variable for clearInterval() functionality
var animation = setInterval(function() {
  $('#slideshow').children().each(function(index, item){
    var el = $(item);
    var position = el.css('left').slice(0, -2);
    
    // move displayed slide from position 1 to position 4
    if (position < 0) {
      position = ((imageArray.length - 1) * 800);
      el.css({left: position});      
    }

    el.animate({left: position - 800}, 'slow');
  });
}, 2000);

</script>








